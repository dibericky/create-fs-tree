{
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "compilerOptions": {

        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "lib",
        "declaration": true,
        "rootDirs": ["src", "test"],
        "pretty": true,
        "noEmitOnError":true,
        "sourceMap": true,

        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true

    }
}
